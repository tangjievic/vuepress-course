{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./website",
  },
  "include": ["docs/theme",".vuepress"],
  "exclude": ["node_modules", "dist"]
}
  